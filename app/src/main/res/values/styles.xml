<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary and Accent Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and Text Colors -->
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- Text Appearance for Buttons -->
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <!-- Text Styles -->
    <style name="TextTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeading">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="ButtonTertiary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- Toolbar Style -->
    <style name="AppToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- Input Field Style (e.g., Search Bar) -->
    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/search_bar_height</item>
        <!-- <item name="android:hintTextColor">@color/textColorSecondary</item> -->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/search_bar_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/search_bar_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/search_bar_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/search_bar_corner_radius</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Divider Style -->
    <style name="DividerStyle">
        <item name="android:layout_height">@dimen/divider_thickness</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>